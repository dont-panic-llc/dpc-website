<section class="container g-py-100">
	<div class="row g-mb-20">
		<div class="col-lg-6 g-mb-50">
			<!-- Heading -->
			<h2 class="h1 g-color-black g-font-weight-700 mb-4">How can we partner with you?</h2>
			<p class="g-font-size-18 mb-0">We are always interested in finding new clients to partner with. Please drop us a line if you are interested!</p>
			<!-- End Heading -->
		</div>
		<div class="col-lg-3 align-self-end ml-auto g-mb-50">
			<div class="media">
				<div class="d-flex align-self-center">
              <span class="u-icon-v2 u-icon-size--sm g-color-white g-bg-primary rounded-circle mr-3">
                  <i class="g-font-size-16 icon-communication-033 u-line-icon-pro"></i>
                </span>
				</div>
				<div class="media-body align-self-center">
					<h3 class="h6 g-color-black g-font-weight-700 text-uppercase mb-0">Phone Number</h3>
					<p class="mb-0">+1 (207) 536-9202</p>
				</div>
			</div>
		</div>

		<div class="col-lg-3 align-self-end ml-auto g-mb-50">
			<div class="media">
				<div class="d-flex align-self-center">
              <span class="u-icon-v2 u-icon-size--sm g-color-white g-bg-primary rounded-circle mr-3">
                  <i class="g-font-size-16 icon-communication-062 u-line-icon-pro"></i>
                </span>
				</div>
				<div class="media-body align-self-center">
					<h3 class="h6 g-color-black g-font-weight-700 text-uppercase mb-0">Email Address</h3>
					<p class="mb-0">info@dontpanic.consulting</p>
				</div>
			</div>
		</div>
	</div>

	<div class="row justify-content-center">
		{{#if enquirySubmitted}}
			<h3>Thank you for your inquiry. We will get back to you within 1 business day.</h3>
		{{else}}
		<form method="post">
    		<input type="hidden" name="action" value="contact">

			<div class="row">
				<div class="col-md-5">
					<div class="row">
						<div class="form-group g-mb-20 col-md-12">
							<label for="first_name" class="g-color-gray-dark-v2 g-font-size-13" >Full Name</label>
							<input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15" id="first_name" maxlength="100" name="name" size="100" type="text">
						</div>
					</div>
					<div class="form-group g-mb-20">
						<label for="email" class="g-color-gray-dark-v2 g-font-size-13">Your email</label>
						<input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15" id="email" maxlength="80" name="email" size="20" type="text">
					</div>

					<div class="form-group g-mb-20">
						<label for="phone" class="g-color-gray-dark-v2 g-font-size-13">Phone number</label>
						<input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15" iid="phone" maxlength="40" name="phone" size="20" type="text" placeholder="(XXX) XXX-XXXX" data-mask="(999) 999-9999" >
					</div>
					<div class="form-group g-mb-20">
						<label for="company" class="g-color-gray-dark-v2 g-font-size-13">Company</label>
						<input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15" id="company" maxlength="40" name="company" size="20" type="text">
					</div>


				</div>
				<div class="col-md-7">
					<div class="row">
						<div class="form-group g-mb-20 col-md-12">
							<label for="city" class="g-color-gray-dark-v2 g-font-size-13" >City</label>
							<select class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15" id="city" maxlength="40" name="enquiryType" type="text">
								<option>- Select one -</option>
								{{#each enquiryTypes}}
					              <option value="{{value}}">{{label}}</option>
					            {{/each}}
							</select>
						</div>
					</div>
					<div class="form-group g-mb-40">
						<label class="g-color-gray-dark-v2 g-font-size-13" for="description">Your message</label>
						<textarea class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus g-resize-none rounded-3 g-py-13 g-px-15" name="message" rows="12" placeholder="Hi there, I would like to ..."></textarea>
					</div>
					

					<div class="text-right">
						<button class="btn u-btn-primary g-font-weight-600 g-font-size-13 text-uppercase rounded-3 g-py-12 g-px-35" type="submit" role="button">Send</button>
					</div>
				</div>
			</div>
		</form>
		{{/if}}
	</div>

</section>
