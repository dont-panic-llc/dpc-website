<nav id="stickyblock-end" class="text-center" aria-label="Page Navigation">
	<ul class="list-inline">
		<li class="list-inline-item float-left hidden-xs-down">
			<a class="u-pagination-v1__item u-pagination-v1-4 g-brd-gray-light-v3 g-brd-primary--hover g-rounded-50 g-pa-7-16{{#unless
					data.posts.previous}} disabled{{/unless}}" href="{{paginationPreviousUrl data.posts.previous}}"
			   aria-label="Previous">
                    <span aria-hidden="true">
                      <i class="fa fa-angle-left g-mr-5"></i> Previous
                    </span>
				<span class="sr-only">Previous</span>
			</a>
		</li>
		{{{paginationNavigation data.posts.pages data.posts.currentPage data.posts.totalPages}}}
		<li class="list-inline-item float-right hidden-xs-down{{#unless data.posts.next}} disabled{{/unless}}">
			<a class="u-pagination-v1__item u-pagination-v1-4 g-brd-gray-light-v3 g-brd-primary--hover g-rounded-50 g-pa-7-16"
			   href="{{paginationNextUrl data.posts.next data.posts.totalPages}}" aria-label="Next">
                    <span aria-hidden="true">
                      Next <i class="fa fa-angle-right g-ml-5"></i>
                    </span>
				<span class="sr-only">Next</span>
			</a>
		</li>
	</ul>
</nav>
